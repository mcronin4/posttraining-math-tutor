{
  "name": "@math-tutor/core",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schemas": {
      "import": "./dist/schemas.mjs",
      "require": "./dist/schemas.js",
      "types": "./dist/schemas.d.ts"
    },
    "./curriculum": {
      "import": "./dist/curriculum.mjs",
      "require": "./dist/curriculum.js",
      "types": "./dist/curriculum.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/schemas.ts src/curriculum.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/schemas.ts src/curriculum.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "zod": "^3.22.4"
  }
}

